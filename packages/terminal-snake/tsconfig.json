{
  "compilerOptions": {
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["es5", "es6", "es7", "es2017", "esnext.asynciterable"],
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "app",
    "types": ["node"],
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
